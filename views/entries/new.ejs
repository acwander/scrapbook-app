<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include ('../partials/head.ejs') %>
  </head>
  <body>
    <div class="container">
      <!-- Navbar -->
      <%- include ('../partials/nav.ejs') %>
      <header>
        <h1 class="text-center">Create a Page</h1>
      </header>
      <form action="/entries" method="POST">
        <!-- Select which book to edit -->
        <label>Select Scrapbook:</label>
        <select name="bookId">
          <% for( let i = 0; i < scrapbooks.length; i++ ) { %>
          <option value="<%= scrapbooks[i].id %>">
            <%= scrapbooks[i].name %>
          </option>
          <% } %>
        </select>
        <div class="form-group">
          <label for="title">Page Title:</label>
          <input type="text" name="title" required />
        </div>
        <div class="form-group">
          <label for="memory">Memory:</label>
          <textarea type="textarea" name="memory" required></textarea>
        </div>
        <div class="form-group">
          <label for="image">Picture:</label>
          <input
            type="text"
            name="image"
            value="https://source.unsplash.com/random"
          />
        </div>
        <input type="submit" value="Submit" class="btn btn-outline-primary" />
      </form>
      <footer>
        <%- include ('../partials/footer.ejs') %>
      </footer>
    </div>
  </body>
</html>
