<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include ('../partials/head.ejs') %>
  </head>
  <body>
    <div class="container">
      <!-- Navbar -->
      <%- include ('../partials/nav.ejs') %>
      <header>
        <h1 class="text-center">Edit <%= entry.title %></h1>
      </header>
      <form action="/entries/<%= entry.id %>?_method=PUT " method="POST">
        <div class="form-group">
          <label for="title">Page Title:</label>
          <input type="text" name="title" value="<%= entry.title %>" required />
        </div>
        <div class="form-group">
          <label for="memory">Memory:</label>
          <textarea type="textarea" name="memory" required>
            <%= entry.memory %>
          </textarea>
        </div>
        <div class="form-group">
          <label for="image">Picture:</label>
          <input type="text" name="image" value="<%=entry.image %>" />
        </div>
        <input type="submit" value="Submit" class="btn btn-outline-primary" />
      </form>
      <footer>
        <%- include ('../partials/footer.ejs') %>
      </footer>
    </div>
  </body>
</html>
