<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include ('../partials/head.ejs') %>
  </head>
  <body>
    <div class="container">
      <nav>
        <%- include ('../partials/nav.ejs') %>
      </nav>
      <h1 class="text-center">Edit <%= scrapbook.name %></h1>
      <form action="/scrapbook/<%= scrapbook.id %>?_method=PUT" method="POST">
        <div class="form-group">
          <label for="name">Scrapbook Title:</label>
          <input
            type="text"
            name="name"
            value="<%= scrapbook.name %>"
            required
          />
        </div>
        <div class="form-group">
          <label for="description">Description:</label>
          <textarea type="textarea" name="description" required>
            <%= scrapbook.description %>
          </textarea>
        </div>
        <div class="form-group">
          <label for="image">Picture:</label>
          <input type="text" name="image" value="<%= scrapbook.image %>" />
        </div>
        <input type="submit" value="Submit" class="btn btn-outline-primary" />
      </form>
      <a href="/scrapbook/home" class="btn btn-outline-danger">Cancel</a>
      <footer>
        <%- include ('../partials/footer.ejs') %>
      </footer>
    </div>
  </body>
</html>
