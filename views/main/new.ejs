<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include ('../partials/head.ejs') %>
  </head>
  <body>
    <div class="container">
      <!-- Navbar -->
      <%- include ('../partials/nav.ejs') %>
      <h1 class="text-center">Create a Scrapbook</h1>
      <form action="/scrapbook" method="POST">
        <div class="form-group">
          <label for="name">Scrapbook:</label>
          <input type="text" name="name" required />
        </div>
        <div class="form-group">
          <label for="description">Description:</label>
          <textarea type="textarea" name="description" required></textarea>
        </div>
        <div class="form-group">
          <label for="image">Picture:</label>
          <input
            type="text"
            name="image"
            value="https://source.unsplash.com/random"
          />
        </div>
        <input type="submit" value="Submit" class="btn btn-outline-primary" />
      </form>
      <footer>
        <%- include ('../partials/footer.ejs') %>
      </footer>
    </div>
  </body>
</html>
