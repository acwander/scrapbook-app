<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include ('../partials/head.ejs') %>
  </head>
  <body>
    <div class="container">
      <nav>
        <%- include ('../partials/nav.ejs') %>
      </nav>
      <header class="text-center">
        <h1><%=scrapbook.name%></h1>
        <a href="/entries/new" class="btn btn-outline-primary">New Page</a>
      </header>

      <!-- Carousel -->
      <div
        id="carouselExampleCaptions"
        class="book-carousel carousel slide carousel-fade"
        data-ride="carousel"
        data-interval="false"
      >
        <div class="carousel-inner">
          <div class="carousel-item active">
            <img
              src="<%= scrapbook.image %>"
              class="d-block w-100 img-fluid"
              alt="<%= scrapbook.name %>"
            />
            <div class="carousel-caption d-none d-md-block">
              <h5><%=scrapbook.name%></h5>
              <p><%= scrapbook.description %></p>
            </div>
          </div>
          <!-- Loop to add created entries to carousel -->
          <% for( let i = 0; i < scrapbook.entries.length; i++ ) { %>
          <div class="carousel-item">
            <img
              src="<%= scrapbook.entries[i].image %> "
              class="d-block w-100"
              alt="<%= scrapbook.entries[i].title %>"
            />
            <div class="carousel-caption d-none d-md-block">
              <h5><%= scrapbook.entries[i].title %></h5>
              <p><%= scrapbook.entries[i].memory %></p>
              <p>
                <a href="/entries/<%= scrapbook.entries[i].id %>">Show More</a>
              </p>
            </div>
          </div>
          <% } %>
        </div>
        <a
          class="carousel-control-prev"
          href="#carouselExampleCaptions"
          role="button"
          data-slide="prev"
        >
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a
          class="carousel-control-next"
          href="#carouselExampleCaptions"
          role="button"
          data-slide="next"
        >
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>
      <hr />
      <!-- Carousel End -->
      <div class="container">
        <div class="row">
          <!-- Edit -->
          <a
            href="/scrapbook/<%=scrapbook.id%>/edit"
            class="btn btn-sm btn-outline-primary col-sm"
            >Edit Scrapbook (Title, Description, Image)</a
          >
          <!-- Delete -->
          <form
            action="/scrapbook/<%=scrapbook.id%>?_method=DELETE"
            method="POST"
          >
            <input
              type="submit"
              value="Delete Scrapbook"
              class="btn btn-sm btn-outline-danger col-sm"
            />
          </form>
        </div>
      </div>

      <footer>
        <%- include ('../partials/footer.ejs') %>
      </footer>
    </div>
  </body>
</html>
