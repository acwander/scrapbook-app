<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include ('../partials/head.ejs') %>
  </head>
  <body>
    <div class="container">
      <nav>
        <%- include ('../partials/nav.ejs') %>
      </nav>
      <h1 class="text-center">Scrapbooks Index</h1>
      <a href="/scrapbook/new" class="btn btn-primary"
        >Create a New Scrapbook</a
      >
      <!-- CARDS -->
      <div class="card-container text-center">
        <div class="row">
          <% scrapbooks.forEach(element => { %>

          <div class="card col-sm-4" style="width: 18rem;">
            <img src="<%= element.img %> " alt="" class="img-fluid" />
            <h5 class="card-title"><%= element.name %></h5>
            <p class="card-body">
              <%= element.description %>
            </p>
            <!-- Show -->
            <a href="#" class="btn btn-sm btn-outline-primary">Open</a>
            <!-- Delete -->
            <form
              action="/scrapbook/<%=element.id%>?_method=DELETE"
              method="post"
            >
              <input
                type="submit"
                value="Delete"
                class="btn btn-sm btn-outline-danger"
              />
            </form>
          </div>
          <% }) %>
        </div>
      </div>
      <footer>
        <%- include ('../partials/footer.ejs') %>
      </footer>
    </div>
  </body>
</html>
