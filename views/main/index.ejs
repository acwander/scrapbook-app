<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include ('../partials/head.ejs') %>
  </head>
  <body>
    <div class="container">
      <!-- Navbar -->
      <%- include ('../partials/nav.ejs') %>
      <header class="text-center">
        <h1>My Scrapbooks</h1>
      </header>
      <!-- CARDS -->
      <div class="card-container container-fluid text-center">
        <div class="row align-items-center">
          <% scrapbooks.forEach(element => { %>

          <div class="card col-sm-3 mx-auto">
            <a href="/scrapbook/<%=element.id%>">
              <img
                src="<%= element.image %> "
                alt="<%= element.name %>"
                class="img-fluid"
              />
              <h5 class="card-title"><%= element.name %></h5>
              <p class="card-body">
                <%= element.description %>
              </p>
            </a>
          </div>
          <% }) %>
          <div class="card col-sm-3 mx-auto new-scrapbook">
            <a href="/scrapbook/new">
              <h5 class="card-title new-title">New Scrapbook</h5>
              <i class="h1 fas fa-plus new-icon"></i>
            </a>
          </div>
        </div>
      </div>
      <footer>
        <%- include ('../partials/footer.ejs') %>
      </footer>
    </div>
  </body>
</html>
