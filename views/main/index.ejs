<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include ('../partials/head.ejs') %>
  </head>
  <body>
    <div class="container">
      <nav>
        <%- include ('../partials/nav.ejs') %>
      </nav>
      <header class="text-center">
        <h1>Your Memories</h1>
      </header>

      <!-- CARDS -->
      <div class="card-container text-center">
        <div class="row align-items-center">
          <% scrapbooks.forEach(element => { %>

          <div class="card col-sm-4" style="min-width: 18rem;">
            <img src="<%= element.img %> " alt="" class="img-fluid" />
            <h5 class="card-title"><%= element.name %></h5>
            <p class="card-body">
              <%= element.description %>
            </p>
            <!-- Show -->
            <a
              href="/scrapbook/<%=element.id%> "
              class="btn btn-sm btn-outline-primary"
              >Open</a
            >
            <!-- Edit -->
            <a
              href="/scrapbook/<%=element.id%>/edit"
              class="btn btn-sm btn-outline-primary"
              >Edit</a
            >
            <!-- Delete -->
            <form
              action="/scrapbook/<%=element.id%>?_method=DELETE"
              method="POST"
            >
              <input
                type="submit"
                value="Delete"
                class="btn btn-sm btn-outline-danger"
              />
            </form>
          </div>
          <% }) %>
          <a href="/scrapbook/new">
            <div class="card col-sm-4 new-scrapbook" style="min-width: 18rem;">
              <h5 class="card-title">New Scrapbook</h5>
              <i class="h1 fas fa-plus"></i>
            </div>
          </a>
        </div>
      </div>
      <footer>
        <%- include ('../partials/footer.ejs') %>
      </footer>
    </div>
  </body>
</html>
